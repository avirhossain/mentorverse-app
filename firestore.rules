rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // This rule checks if a user has the email 'avirhossain@gmail.com'.
      // For production, it's recommended to use custom claims instead of hardcoding emails.
      return request.auth != null && request.auth.token.email == 'avirhossain@gmail.com';
    }

    // Mentees: Can only read/write their own profile.
    match /mentees/{menteeId} {
      allow read, write: if request.auth != null && request.auth.uid == menteeId;
    }

    // Mentors: Publicly readable, but only admins can write.
    match /mentors/{mentorId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }
    
    // Sessions: Publicly readable, but only admins can create/manage them.
    match /sessions/{sessionId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }
    
    // Bookings: Mentees can create their own bookings and read them.
    // Admins can read all bookings.
    match /bookings/{bookingId} {
      // Allow a mentee to read a booking if their UID matches the menteeId in the document.
      // Allow an admin to read any booking.
      allow get: if request.auth != null && (request.auth.uid == resource.data.menteeId || isAdmin());
      
      // A mentee can only list their own bookings. Admins can list all.
      // Note: This rule is complex and requires the client to query correctly.
      allow list: if request.auth != null && (isAdmin() || (request.query.get("where") != null && request.query.get("where")[0][0] == "menteeId" && request.query.get("where")[0][2] == request.auth.uid));

      // Allow a mentee to create a booking for themselves.
      allow create: if request.auth != null && request.resource.data.menteeId == request.auth.uid;
      
      // Only admins can update or delete bookings.
      allow update, delete: if isAdmin();
    }

    // Reviews: Publicly readable, logged-in users can create. Admins have full control.
    match /reviews/{reviewId} {
       allow get, list: if true;
       allow create: if request.auth != null;
       allow update, delete: if isAdmin();
    }
    
    // Tips: Publicly readable, admin-only writes.
    match /tips/{tipId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }
    
    // --- Admin-only or user-specific subcollections ---

    match /disbursements/{disbursementId} {
      allow read, write: if isAdmin();
    }

    match /mentees/{menteeId}/transactions/{transactionId} {
      allow read, write: if request.auth != null && request.auth.uid == menteeId;
    }
    
    match /mentors/{mentorId}/payouts/{payoutId} {
      allow read, write: if isAdmin();
    }
  }
}
