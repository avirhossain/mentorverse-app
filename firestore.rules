rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // In a real app, this would be more secure, e.g., request.auth.token.admin == true;
      // For this prototype, we consider any logged-in user an admin for simplicity.
      return request.auth != null;
    }

    // Mentees: Publicly readable, but only the mentee can write to their own profile.
    match /mentees/{menteeId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == menteeId;
    }

    // Mentors: Publicly readable, but only admins can write.
    match /mentors/{mentorId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Sessions: Publicly readable, but only admins can create/manage them.
    match /sessions/{sessionId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Reviews: Logged-in users can create reviews. Admins have full control.
    match /reviews/{reviewId} {
       allow read: if true;
       allow create: if request.auth != null;
       allow update, delete: if isAdmin();
    }
    
    // Tips: Publicly readable, admin-only writes.
    match /tips/{tipId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // --- Admin-only or user-specific subcollections ---

    match /disbursements/{disbursementId} {
      allow read, write: if isAdmin();
    }

    match /mentees/{menteeId}/transactions/{transactionId} {
      allow read, write: if request.auth != null && request.auth.uid == menteeId;
    }
    
    match /mentors/{mentorId}/payouts/{payoutId} {
      allow read, write: if isAdmin();
    }
  }
}
