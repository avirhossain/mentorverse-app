rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // For now, we will consider everyone an admin to remove login barriers.
      // In a real app, this would be: request.auth != null && request.auth.token.admin == true;
      return true;
    }

    // Mentees: Allow anyone to create their own profile.
    match /mentees/{menteeId} {
      allow read, write: if true;
    }

    // Mentors: Publicly readable, admin-only writes.
    match /mentors/{mentorId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Sessions: Publicly readable, admin-only writes.
    match /sessions/{sessionId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Reviews: Anyone can read or create, admins can delete.
    match /reviews/{reviewId} {
       allow read, create: if true;
       allow update, delete: if isAdmin();
    }
    
    // Tips: Publicly readable, admin-only writes.
    match /tips/{tipId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Admin-only collections
    match /disbursements/{disbursementId} {
      allow read, write: if isAdmin();
    }

    match /mentees/{menteeId}/transactions/{transactionId} {
      allow read, write: if true;
    }
    
    match /mentors/{mentorId}/payouts/{payoutId} {
      allow read, write: if isAdmin();
    }
  }
}
