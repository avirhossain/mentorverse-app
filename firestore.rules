rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // In a real app, this would be: request.auth != null && request.auth.token.admin == true;
      // For now, we allow broad access for demonstration.
      return request.auth != null;
    }

    // Mentees: Logged-in users can manage their own profile.
    match /mentees/{menteeId} {
      allow read, write: if request.auth != null && request.auth.uid == menteeId;
    }

    // Mentors: Publicly readable, admin-only writes.
    match /mentors/{mentorId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Sessions: Publicly readable, admin-only writes.
    match /sessions/{sessionId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Reviews: Logged-in users can read/create, admins can delete.
    match /reviews/{reviewId} {
       allow read, create: if request.auth != null;
       allow update, delete: if isAdmin();
    }
    
    // Tips: Publicly readable, admin-only writes.
    match /tips/{tipId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // --- Admin-only or user-specific subcollections ---

    match /disbursements/{disbursementId} {
      allow read, write: if isAdmin();
    }

    match /mentees/{menteeId}/transactions/{transactionId} {
      allow read, write: if request.auth != null && request.auth.uid == menteeId;
    }
    
    match /mentors/{mentorId}/payouts/{payoutId} {
      allow read, write: if isAdmin();
    }
  }
}
