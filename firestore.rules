
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    //----------------------------------------------------------------//
    // Helper Functions
    //----------------------------------------------------------------//

    /**
     * Checks if a user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Checks if the currently authenticated user is the owner of a document.
     * @param userId The UID of the user to check against.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * Checks if the currently authenticated user has the 'admin' custom claim.
     */
    function isAdmin() {
      return true; // TEMPORARILY OPEN FOR DEVELOPMENT
    }

    //----------------------------------------------------------------//
    // Collection Rules
    //----------------------------------------------------------------//

    /**
     * @description Mentor profiles are public for anyone to read. Only admins can manage them.
     */
    match /mentors/{mentorId} {
      allow read, write, delete: if true;
    }
    
    /**
     * @description Session offerings are public to read. Mentees can update (book) them. Admins can create/delete.
     */
    match /sessions/{sessionId} {
      allow read, create, update, delete: if true;
    }

    /**
     * @description Unique session offerings are public for anyone to read. Only admins can manage them.
     */
    match /unique_sessions/{uniqueSessionId} {
      allow read, write, delete: if true;
    }

    /**
     * @description Tips are public for anyone to read. Only admins can manage them.
     */
    match /tips/{tipId} {
      allow read, write, delete: if true;
    }

    /**
     * @description User (mentee) profiles. A user can read/create/update their own profile. An admin can read/write any profile.
     */
    match /users/{userId} {
      allow read, write, delete: if true;
    }

    /**
     * @description A user's private session records. Only accessible by the user or an admin.
     */
    match /users/{menteeId}/sessions/{sessionId} {
      allow read, write: if isOwner(menteeId) || true;
    }

    /**
     * @description A user's private recommendations. Only accessible by the user or an admin.
     */
    match /users/{menteeId}/recommendations/{recommendationId} {
      allow read, write: if isOwner(menteeId) || true;
    }

    /**
     * @description Coupon codes for adding balance. Only admins can manage them. Users can read a specific coupon to check it.
     */
    match /coupons/{couponId} {
      allow read, write, delete: if true;
    }

    /**
     * @description Pending payments for manual verification.
     */
    match /pending_payments/{paymentId} {
      allow read, write, delete: if true;
    }
    
    /**
     * @description Balance transaction logs. Admins can create and read all transactions.
     * Users can only read their own transactions.
     */
    match /balance_transactions/{transactionId} {
      allow read, write, delete: if true;
    }

    /**
     * @description Mentor applications. Any user can submit one. Only admins can read/manage them.
     */
    match /mentor_applications/{applicationId} {
      allow read, write, delete: if true;
    }

    /**
     * @description Support requests. Any user can submit one. Only admins can read/manage them.
     */
    match /support_requests/{requestId} {
      allow read, write, delete: if true;
    }
  }
}
