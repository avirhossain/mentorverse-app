
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    //----------------------------------------------------------------//
    // Helper Functions
    //----------------------------------------------------------------//

    /**
     * Checks if a user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Checks if the currently authenticated user is the owner of a document.
     * @param userId The UID of the user to check against.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * Checks if the currently authenticated user is the admin.
     */
    function isAdmin() {
      return isSignedIn() && request.auth.token.email == 'mazhar@admin.com';
    }

    //----------------------------------------------------------------//
    // Collection Rules
    //----------------------------------------------------------------//

    /**
     * @description Mentor profiles are public for anyone to read. Only admins can manage them.
     */
    match /mentors/{mentorId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    /**
     * @description Session offerings are public for anyone to read. Only admins can manage them.
     */
    match /sessions/{sessionId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    /**
     * @description Unique session offerings are public for anyone to read. Only admins can manage them.
     */
    match /unique_sessions/{uniqueSessionId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    /**
     * @description Tips are public for anyone to read. Only admins can manage them.
     */
    match /tips/{tipId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    /**
     * @description User (mentee) profiles. A user can create their own profile and can only access their own. Admins can manage any profile.
     */
    match /users/{menteeId} {
      allow get, update: if isOwner(menteeId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(menteeId);
      allow delete: if isAdmin();
    }

    /**
     * @description A user's private session records. Only accessible by the user or an admin.
     */
    match /users/{menteeId}/sessions/{sessionId} {
      allow read, write: if isOwner(menteeId) || isAdmin();
    }

    /**
     * @description A user's private recommendations. Only accessible by the user or an admin.
     */
    match /users/{menteeId}/recommendations/{recommendationId} {
      allow read, write: if isOwner(menteeId) || isAdmin();
    }

    /**
     * @description Coupon codes for adding balance. Only admins can manage them.
     */
    match /coupons/{couponId} {
      allow read, write: if isAdmin();
    }

    /**
     * @description Pending payments for manual verification.
     */
    match /pending_payments/{paymentId} {
      allow create: if isOwner(request.resource.data.userId);
      allow get, list, update, delete: if isAdmin();
    }
    
    /**
     * @description Balance transaction logs. Admins can read all, users can only read their own.
     */
    match /balance_transactions/{transactionId} {
        allow get, list: if isAdmin();
        // Add rule for users to read their own transactions if needed
    }
  }
}
