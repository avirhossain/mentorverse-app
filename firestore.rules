
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    //----------------------------------------------------------------//
    // Helper Functions
    //----------------------------------------------------------------//

    /**
     * Checks if a user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Checks if the currently authenticated user is the owner of a document.
     * @param userId The UID of the user to check against.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * Checks if the currently authenticated user is the admin by email.
     */
    function isAdmin() {
      return isSignedIn() && request.auth.token.email == 'mazhar@admin.com';
    }

    //----------------------------------------------------------------//
    // Collection Rules
    //----------------------------------------------------------------//

    /**
     * @description Public content that can be read by anyone, but only managed by admins.
     */
    match /mentors/{mentorId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }
    
    match /sessions/{sessionId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /unique_sessions/{uniqueSessionId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /tips/{tipId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    /**
     * @description User profiles. Users can manage their own profile. Admins can manage any.
     */
    match /users/{menteeId} {
      allow get: if isOwner(menteeId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(menteeId);
      allow update: if isOwner(menteeId) || isAdmin();
      allow delete: if isAdmin();
    }

    /**
     * @description User subcollections. Only accessible by the user or an admin.
     */
    match /users/{menteeId}/sessions/{sessionId} {
      allow read, write: if isOwner(menteeId) || isAdmin();
    }

    match /users/{menteeId}/recommendations/{recommendationId} {
      allow read, write: if isOwner(menteeId) || isAdmin();
    }

    /**
     * @description Coupons can be read by any signed-in user, but only managed by admins.
     */
    match /coupons/{couponId} {
      allow get: if isSignedIn();
      allow list, create, update, delete: if isAdmin();
    }

    /**
     * @description Pending payments can be created by the user, but only managed by admins.
     */
    match /pending_payments/{paymentId} {
      allow create: if isOwner(request.resource.data.userId);
      allow get, list, update, delete: if isAdmin();
    }
    
    /**
     * @description Balance transaction logs are admin-only for creation and listing.
     */
    match /balance_transactions/{transactionId} {
      allow create, get, list: if isAdmin();
    }
  }
}
