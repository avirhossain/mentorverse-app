{
  "entities": {
    "mentor": {
      "title": "Mentor",
      "description": "Represents a mentor in the application. Mentors do not log in; their profiles are managed by admins.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the mentor."
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "phone": {
          "type": "string"
        },
        "photoUrl": {
          "type": "string",
          "format": "uri"
        },
        "bio": {
          "type": "string"
        },
        "expertise": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "education": {
          "type": "string"
        },
        "experienceYears": {
          "type": "number"
        },
        "ratingAvg": {
          "type": "number"
        },
        "ratingCount": {
          "type": "number"
        },
        "totalSessions": {
          "type": "number"
        },
        "hourlyRate": {
          "type": "number"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "isActive": {
          "type": "boolean"
        },
        "availability": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "day": {
                "type": "string"
              },
              "slots": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "required": [
        "id",
        "name",
        "email"
      ]
    },
    "mentee": {
      "title": "Mentee",
      "description": "Represents a mentee (user) in the application.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Matches the Firebase Auth UID."
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "phone": {
          "type": "string"
        },
        "photoUrl": {
          "type": "string",
          "format": "uri"
        },
        "accountBalance": {
          "type": "number"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "isActive": {
          "type": "boolean"
        },
        "totalSessionsBooked": {
          "type": "number"
        }
      },
      "required": [
        "id",
        "name",
        "email"
      ]
    },
    "session": {
      "title": "Session",
      "description": "Represents a booked session between a mentor and a mentee.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "mentorId": {
          "type": "string"
        },
        "menteeId": {
          "type": "string"
        },
        "name": {
          "type": "string",
          "description": "The name of the session."
        },
        "tag": {
          "type": "string",
          "description": "A tag for the session."
        },
        "offerings": {
          "type": "string",
          "description": "What the session offers."
        },
        "bestSuitedFor": {
          "type": "string",
          "description": "Who the session is best suited for."
        },
        "requirements": {
          "type": "string",
          "description": "Any requirements for the session."
        },
        "sessionType": {
          "type": "string",
          "enum": [
            "Free",
            "Paid",
            "Exclusive"
          ]
        },
        "bookingTime": {
          "type": "string",
          "format": "date-time"
        },
        "scheduledDate": {
          "type": "string",
          "format": "date"
        },
        "scheduledTime": {
          "type": "string",
          "format": "time"
        },
        "bookedSlotId": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "pending",
            "confirmed",
            "started",
            "completed",
            "cancelled"
          ]
        },
        "meetingUrl": {
          "type": "string",
          "format": "uri"
        },
        "meetingStartedAt": {
          "type": "string",
          "format": "date-time"
        },
        "meetingEndedAt": {
          "type": "string",
          "format": "date-time"
        },
        "mentorNotes": {
          "type": "string"
        },
        "menteeReviewId": {
          "type": "string"
        },
        "sessionFee": {
          "type": "number"
        },
        "adminDisbursementStatus": {
          "type": "string",
          "enum": [
            "pending",
            "paid"
          ]
        }
      },
      "required": [
        "id",
        "mentorId",
        "menteeId",
        "bookingTime",
        "scheduledDate",
        "scheduledTime",
        "status",
        "sessionFee",
        "name",
        "sessionType"
      ]
    },
    "review": {
      "title": "Review",
      "description": "A review left by a mentee for a completed session.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "sessionId": {
          "type": "string"
        },
        "mentorId": {
          "type": "string"
        },
        "menteeId": {
          "type": "string"
        },
        "rating": {
          "type": "number"
        },
        "reviewText": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "sessionId",
        "mentorId",
        "menteeId",
        "rating"
      ]
    },
    "tip": {
      "title": "Tip",
      "description": "A helpful tip or article for mentees, managed by admins.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "imageUrl": {
          "type": "string",
          "format": "uri"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "adminId": {
          "type": "string"
        },
        "isActive": {
          "type": "boolean"
        }
      },
      "required": [
        "id",
        "title",
        "description",
        "adminId"
      ]
    },
    "disbursement": {
      "title": "Disbursement",
      "description": "Tracks payment settlements to mentors, managed by admins.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "mentorId": {
          "type": "string"
        },
        "totalAmount": {
          "type": "number"
        },
        "sessions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "status": {
          "type": "string",
          "enum": [
            "pending",
            "paid"
          ]
        },
        "paidAt": {
          "type": "string",
          "format": "date-time"
        },
        "adminId": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "mentorId",
        "totalAmount",
        "sessions",
        "status",
        "adminId"
      ]
    },
    "transaction": {
      "title": "Transaction",
      "description": "Represents a mentee's account balance history (top-ups, bookings, refunds).",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "topup",
            "booking",
            "refund"
          ]
        },
        "amount": {
          "type": "number"
        },
        "description": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "type",
        "amount",
        "createdAt"
      ]
    },
    "payout": {
      "title": "Payout",
      "description": "Represents a mentor's payout history.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "disbursementId": {
          "type": "string"
        },
        "amount": {
          "type": "number"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "disbursementId",
        "amount",
        "createdAt"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "google"
    ]
  },
  "firestore": {
    "/mentors/{mentorId}": {
      "schema": {
        "$ref": "#/entities/mentor"
      },
      "description": "Stores mentor profiles. Managed by admins."
    },
    "/mentors/{mentorId}/payouts/{payoutId}": {
      "schema": {
        "$ref": "#/entities/payout"
      },
      "description": "Subcollection storing payout history for a specific mentor."
    },
    "/mentees/{menteeId}": {
      "schema": {
        "$ref": "#/entities/mentee"
      },
      "description": "Stores mentee user profiles. Document ID should match Firebase Auth UID."
    },
    "/mentees/{menteeId}/transactions/{transactionId}": {
      "schema": {
        "$ref": "#/entities/transaction"
      },
      "description": "Subcollection storing account balance history for a specific mentee."
    },
    "/sessions/{sessionId}": {
      "schema": {
        "$ref": "#/entities/session"
      },
      "description": "Stores all session bookings."
    },
    "/reviews/{reviewId}": {
      "schema": {
        "$ref": "#/entities/review"
      },
      "description": "Stores all reviews for completed sessions."
    },
    "/tips/{tipId}": {
      "schema": {
        "$ref": "#/entities/tip"
      },
      "description": "Stores helpful tips for mentees, managed by admins."
    },
    "/disbursements/{disbursementId}": {
      "schema": {
        "$ref": "#/entities/disbursement"
      },
      "description": "Tracks mentor payout status, managed by admins."
    }
  }
}
