
{
  "production": true,
  "entities": {
    "mentor": {
      "title": "Mentor",
      "description": "Represents a mentor in the application. Mentors do not log in; their profiles are managed by admins.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the mentor."
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "phone": {
          "type": "string"
        },
        "photoUrl": {
          "type": "string",
          "format": "uri"
        },
        "designation": {
          "type": "string"
        },
        "company": {
          "type": "string"
        },
        "bio": {
          "type": "string"
        },
        "expertise": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "education": {
          "type": "string"
        },
        "experience": {
          "type": "string"
        },
        "awards": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "whatToExpect": {
          "type": "string"
        },
        "ratingAvg": {
          "type": "number"
        },
        "ratingCount": {
          "type": "number"
        },
        "totalSessions": {
          "type": "number"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "availability": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "day": {
                "type": "string"
              },
              "slots": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        },
        "isActive": {
          "type": "boolean",
          "description": "Controls if the mentor is visible in the mentee app."
        }
      },
      "required": [
        "id",
        "name",
        "email",
        "isActive"
      ]
    },
    "mentee": {
      "title": "Mentee",
      "description": "Represents a mentee (user) in the application.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Matches the Firebase Auth UID."
        },
        "displayId": {
          "type": "string",
          "description": "A human-readable, unique ID for the admin panel."
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "phone": {
          "type": "string"
        },
        "photoUrl": {
          "type": "string",
          "format": "uri"
        },
        "accountBalance": {
          "type": "number"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "isActive": {
          "type": "boolean"
        },
        "totalSessionsBooked": {
          "type": "number"
        }
      },
      "required": [
        "id",
        "name",
        "email"
      ]
    },
    "session": {
      "title": "Session",
      "description": "Represents a session offering created by an Admin. This is a template for what can be booked.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "displayId": {
          "type": "string",
          "description": "A human-readable, unique ID for the admin panel."
        },
        "mentorId": {
          "type": "string"
        },
        "mentorName": {
          "type": "string",
          "description": "Denormalized mentor name for easier querying and display."
        },
        "name": {
          "type": "string",
          "description": "The name of the session offering."
        },
        "tag": {
          "type": "string",
          "description": "A tag for the session."
        },
        "offerings": {
          "type": "string",
          "description": "What the session offers."
        },
        "bestSuitedFor": {
          "type": "string",
          "description": "Who the session is best suited for."
        },
        "requirements": {
          "type": "string",
          "description": "Any requirements for the session."
        },
        "sessionType": {
          "type": "string",
          "enum": [
            "Free",
            "Paid",
            "Exclusive",
            "Special Request"
          ]
        },
        "scheduledDate": {
          "type": "string",
          "format": "date"
        },
        "scheduledTime": {
          "type": "string",
          "format": "time"
        },
        "duration": {
          "type": "number",
          "description": "The duration of the session in minutes."
        },
        "participants": {
          "type": "number",
          "description": "The number of participants for the session."
        },
        "bookedCount": {
          "type": "number",
          "description": "The number of participants who have booked the session."
        },
        "sessionFee": {
          "type": "number"
        },
        "status": {
          "type": "string",
          "enum": [
            "Active",
            "Expired",
            "Draft"
          ],
          "description": "The manually set status of the session, controlled by an admin."
        },
        "availability": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "day": {
                "type": "string"
              },
              "slots": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "required": [
        "id",
        "mentorId",
        "mentorName",
        "name",
        "sessionType",
        "sessionFee"
      ]
    },
    "booking": {
      "title": "Booking",
      "description": "Represents a confirmed booking of a session by a mentee.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique ID for the booking."
        },
        "sessionId": {
          "type": "string",
          "description": "ID of the session template that was booked."
        },
        "sessionName": {
          "type": "string",
          "description": "Denormalized name of the session."
        },
        "mentorId": {
          "type": "string"
        },
        "mentorName": {
          "type": "string"
        },
        "menteeId": {
          "type": "string"
        },
        "menteeName": {
          "type": "string"
        },
        "bookingTime": {
          "type": "string",
          "format": "date-time"
        },
        "scheduledDate": {
          "type": "string",
          "format": "date"
        },
        "scheduledTime": {
          "type": "string",
          "format": "time"
        },
        "status": {
          "type": "string",
          "enum": [
            "confirmed",
            "started",
            "completed",
            "cancelled"
          ]
        },
        "meetingUrl": {
          "type": "string",
          "format": "uri"
        },
        "sessionFee": {
          "type": "number"
        },
        "adminDisbursementStatus": {
          "type": "string",
          "enum": [
            "pending",
            "paid"
          ]
        }
      },
      "required": [
        "id",
        "sessionId",
        "mentorId",
        "menteeId",
        "bookingTime",
        "scheduledDate",
        "scheduledTime",
        "status",
        "sessionFee"
      ]
    },
    "waitlist": {
      "title": "Waitlist Entry",
      "description": "A mentee's entry on a waitlist for a full session.",
      "type": "object",
      "properties": {
        "menteeId": {
          "type": "string"
        },
        "menteeName": {
          "type": "string"
        },
        "phoneNumber": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "menteeId",
        "menteeName",
        "createdAt"
      ]
    },
    "review": {
      "title": "Review",
      "description": "A review left by a mentee for a completed session. Can be from a logged-in user or a guest for free sessions.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "bookingId": {
          "type": "string",
          "description": "The ID of the booking being reviewed. Can be null for guest reviews on free sessions."
        },
        "mentorId": {
          "type": "string"
        },
        "menteeId": {
          "type": "string",
          "description": "The ID of the mentee or a generated ID for a guest."
        },
        "menteeName": {
          "type": "string",
          "description": "The name of the reviewer."
        },
        "menteePhone": {
          "type": "string",
          "description": "Optional phone number for a guest reviewer."
        },
        "rating": {
          "type": "number"
        },
        "reviewText": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "mentorId",
        "menteeId",
        "menteeName",
        "rating"
      ]
    },
    "tip": {
      "title": "Tip",
      "description": "A helpful tip or article for mentees, managed by admins.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "imageUrl": {
          "type": "string",
          "format": "uri"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "adminId": {
          "type": "string"
        },
        "isActive": {
          "type": "boolean"
        }
      },
      "required": [
        "id",
        "title",
        "description",
        "adminId"
      ]
    },
    "disbursement": {
      "title": "Disbursement",
      "description": "Tracks payment settlements to mentors, managed by admins.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "mentorId": {
          "type": "string"
        },
        "mentorName": {
          "type": "string"
        },
        "totalAmount": {
          "type": "number"
        },
        "bookingIds": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Array of booking IDs included in this disbursement."
        },
        "status": {
          "type": "string",
          "enum": [
            "pending",
            "paid"
          ]
        },
        "paidAt": {
          "type": "string",
          "format": "date-time"
        },
        "adminId": {
          "type": "string"
        },
        "note": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "mentorId",
        "totalAmount",
        "bookingIds",
        "status",
        "adminId"
      ]
    },
    "transaction": {
      "title": "Transaction",
      "description": "Represents a mentee's account balance history (top-ups, bookings, refunds).",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "topup",
            "booking",
            "refund"
          ]
        },
        "amount": {
          "type": "number"
        },
        "description": {
          "type": "string"
        },
        "reference": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "type",
        "amount",
        "createdAt"
      ]
    },
    "payout": {
      "title": "Payout",
      "description": "Represents a mentor's payout history.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "disbursementId": {
          "type": "string"
        },
        "amount": {
          "type": "number"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "disbursementId",
        "amount",
        "createdAt"
      ]
    },
    "specialRequest": {
      "title": "Special Request",
      "description": "A special session request from a mentee to a mentor.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "menteeId": {
          "type": "string"
        },
        "menteeName": {
          "type": "string"
        },
        "mentorId": {
          "type": "string"
        },
        "mentorName": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "pending",
            "approved",
            "denied"
          ]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "menteeId",
        "menteeName",
        "mentorId",
        "mentorName",
        "message",
        "status",
        "createdAt"
      ]
    },
    "notification": {
      "title": "Notification",
      "description": "A notification for a mentee.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "menteeId": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "isRead": {
          "type": "boolean"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "link": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": [
        "id",
        "menteeId",
        "message",
        "isRead",
        "createdAt"
      ]
    }
  },
  "auth": {
    "providers": [
      "google"
    ]
  },
  "firestore": {
    "/mentors/{mentorId}": {
      "schema": {
        "$ref": "#/entities/mentor"
      },
      "description": "Stores mentor profiles. Managed by admins."
    },
    "/mentors/{mentorId}/payouts/{payoutId}": {
      "schema": {
        "$ref": "#/entities/payout"
      },
      "description": "Subcollection storing payout history for a specific mentor."
    },
    "/mentees/{menteeId}": {
      "schema": {
        "$ref": "#/entities/mentee"
      },
      "description": "Stores mentee user profiles. Document ID should match Firebase Auth UID."
    },
    "/mentees/{menteeId}/transactions/{transactionId}": {
      "schema": {
        "$ref": "#/entities/transaction"
      },
      "description": "Subcollection storing account balance history for a specific mentee."
    },
    "/mentees/{menteeId}/notifications/{notificationId}": {
      "schema": {
        "$ref": "#/entities/notification"
      },
      "description": "Subcollection storing notifications for a specific mentee."
    },
    "/sessions/{sessionId}": {
      "schema": {
        "$ref": "#/entities/session"
      },
      "description": "Stores all available session templates. Managed by admins."
    },
    "/sessions/{sessionId}/waitlist/{userId}": {
      "schema": {
        "$ref": "#/entities/waitlist"
      },
      "description": "Subcollection storing waitlisted users for a specific session."
    },
    "/sessionBookings/{bookingId}": {
      "schema": {
        "$ref": "#/entities/booking"
      },
      "description": "Stores all confirmed bookings by mentees."
    },
    "/reviews/{reviewId}": {
      "schema": {
        "$ref": "#/entities/review"
      },
      "description": "Stores all reviews for completed sessions."
    },
    "/tips/{tipId}": {
      "schema": {
        "$ref": "#/entities/tip"
      },
      "description": "Stores helpful tips for mentees, managed by admins."
    },
    "/disbursements/{disbursementId}": {
      "schema": {
        "$ref": "#/entities/disbursement"
      },
      "description": "Tracks mentor payout status, managed by admins."
    },
    "/specialRequests/{requestId}": {
      "schema": {
        "$ref": "#/entities/specialRequest"
      },
      "description": "Stores special session requests from mentees."
    }
  }
}
